<div class="page-header">
  <h1>
    Clips
    <a href="/clips/new" class="btn btn-lg btn-success">New Clip</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Title</th>
        <th>Private</th>
        <th>Rating</th>
        <th>Source</th>
        <th>Notes</th>
        <th>Category</th>
        <th>Actions</th>
      </tr>

      <% @clips.each do |clip| %>
      <tr>
        <td><%= clip.title %></td>
        <td><%= clip.private %></td>
        <td><%= clip.rating %></td>
        <td><%= clip.source %></td>
        <td><%= clip.notes %></td>
        <td><%= clip.category.name %></td>
        <td>
          <a href="/clips/<%= clip.id %>" class="btn btn-primary">Show</a>
          <a href="/clips/<%= clip.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_clip/<%= clip.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
