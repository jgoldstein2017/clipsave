<div class="page-header">
  <h3><%= @clip.title %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Private</dt>
      <dd><%= @clip.private %></dd>

      <dt>Rating</dt>
      <dd><%= @clip.rating %></dd>

      <dt>Source</dt>
      <dd><%= @clip.source %></dd>

      <dt>Title</dt>
      <dd><%= @clip.title %></dd>

      <dt>Notes</dt>
      <dd><%= @clip.notes %></dd>

      <dt>Category</dt>
      <dd><%= @clip.category.name %></dd>

    </dl>

    <div class="video">
      <iframe width="560" height="315"  src="https://www.youtube.com/embed/<%= @video_link %>" frameborder="0" allowfullscreen></iframe>
    </div>

    <div class="btn-group btn-group-justified">
      <a href="/clips" class="btn btn-primary">
        Back
      </a>
      <a href="/clips/<%= @clip.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_clip/<%= @clip.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
